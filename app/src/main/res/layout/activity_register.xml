<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewKeLogin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,MissingConstraints" />

        <TextView
            android:id="@+id/tv_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Akun"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewKeLogin"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_nama_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="Nama :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_daftar"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_nama_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_nama_register"
            app:layout_constraintTop_toBottomOf="@+id/tv_daftar"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etNama_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Agus Wicaksono"
                android:inputType="text"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_username_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Username :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_username_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_username_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_username_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etUsername_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Agus"
                android:inputType="text"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_email_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_email_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_email_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout22"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etEmail_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Agus@gmail.com"
                android:inputType="textEmailAddress"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_password_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Buat Password :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout22"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_password_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_password_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout22"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_password_register"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#211D22"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etPassword_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Agus123"
                android:inputType="textPassword"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_phone_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Phone Number :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_phone_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_phone_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
            tools:ignore="HardcodedText,MissingConstraints,TextViewEdits,TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etPhone_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : 085779688533"
                android:inputType="phone"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_address_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Alamat :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_address_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_address_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_address_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etAddress_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Jl. Singaperbangsa"
                android:inputType="text"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_city_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Kota :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_kota_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_city_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout24"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_kota_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etKota_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : Cilegon"
                android:inputType="text"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_kodepos_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="KodePos :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout24"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/tv_error_kodepos_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="*  "
            android:textColor="#F40808"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/tv_kodepos_register"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout24"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout32"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_error_kodepos_register"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/etKodepos_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_drawable"
                android:hint="Contoh : 42415"
                android:inputType="text"
                tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/login_btn_bg"
            android:text="Daftar"
            android:textSize="18sp"
            android:textColor="@color/text"
            app:layout_constraintBottom_toTopOf="@+id/tv_sudah_punya_akun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout32"
            tools:ignore="HardcodedText,MissingConstraints,VisualLintButtonSize" />

        <TextView
            android:id="@+id/tv_sudah_punya_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="Sudah punya akun? "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/loginDisini"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_daftar"
            tools:ignore="HardcodedText,MissingConstraints" />

        <TextView
            android:id="@+id/loginDisini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:text="Login Disini"
            android:textColor="@color/biru"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_sudah_punya_akun"
            app:layout_constraintTop_toBottomOf="@+id/btn_daftar"
            tools:ignore="HardcodedText,MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>