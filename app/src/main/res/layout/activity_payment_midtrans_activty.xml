<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.PaymentMidtransActivty">



    <TextView
        android:id="@+id/nama_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:text="TB CIBEBER KENCANA 2"/>

    <ImageView
        android:layout_below="@id/nama_toko"
        android:id="@+id/produk_image"
        android:layout_width="match_parent"
        android:layout_height="343dp"/>

    <TextView
        android:layout_below="@id/produk_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toko material"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:id="@+id/nama_produk"/>

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nama_produk"
        android:id="@+id/harga_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toko material"/>

    <TextView
        android:id="@+id/tv_jumlahProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Jumlah Produk"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_below="@id/harga_produk"
        tools:ignore="HardcodedText,MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputjumlahproduk"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tv_jumlahProduk"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/etJumlah"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_drawable"
            android:hint="Contoh : 10"
            android:inputType="text"
            tools:ignore="HardcodedText,Autofill,LabelFor,TextFields,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pesan"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_bg"
        android:text="Pesan sekarang"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textInputjumlahproduk"
        tools:ignore="HardcodedText" />

</RelativeLayout>